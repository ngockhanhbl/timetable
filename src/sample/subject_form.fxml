<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SubjectFormController">
   <children>
      <TableView fx:id="table" layoutX="-1.0" layoutY="-1.0" prefHeight="400.0" prefWidth="395.0">
        <columns>
          <TableColumn id="id" fx:id="idColumn" prefWidth="75.0" text="#" />
          <TableColumn id="name" fx:id="nameColumn" prefWidth="297.0" text="Subject Name" />
        </columns>
      </TableView>
      <Label fx:id="nameLabel" layoutX="400.0" layoutY="113.0" text="Name" />
      <JFXTextField fx:id="nameTextField" layoutX="448.0" layoutY="108.0" />
      <Button fx:id="addBtn" layoutX="532.0" layoutY="165.0" mnemonicParsing="false" onAction="#addBtnClick" style="-fx-background-color: #4CAF50;" text="+ Add" textFill="WHITE" />
      <Button fx:id="saveBtn" layoutX="448.0" layoutY="165.0" mnemonicParsing="false" onAction="#saveClick" style="-fx-background-color: #3F51B5;" text="Save Edit" textFill="WHITE" />
   </children>
</AnchorPane>
